@model List<ResultCarWithBrandsDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="page-content">
    <div class="container-fluid">


        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araba Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Arabalarla ilgili Ekleme, Silme, Güncelleme, Arama ve Listeleme İşlemlerini Bu Sayfa Üzerinden Gerçekleştirebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Marka</th>
                                        <th>Model</th>
                                        <th>Vites Türü</th>
                                        <th>Km</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                        <th>Detaylar</th>
                                        <th>Özellik Ata</th>
                                        <th>Sitede Gör</th>
                                        <th>Fiyat Bilgileri</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.BrandName</td>
                                            <td>@item.Model</td>
                                            <td>@item.Transmisson</td>
                                            <td>@item.Km</td>
                                            <td><a href="/AdminCar/DeleteCar/@item.CarID" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/AdminCar/UpdateCar/@item.CarID" class="btn btn-outline-success">Güncelle</a></td>
                                            <td><a href="/Admin/AdminCarFeature/Index/@item.CarID" class="btn btn-outline-info">Detaylar</a></td>
                                            <td><a href="/Admin/AdminCarFeature/CreateCarFeatureByCarId" class="btn btn-outline-secondary">Özellik Ata</a></td>
                                            <td><a href="/CarList/CarDetail/@item.CarID" class="btn btn-outline-warning">Sitede Gör</a></td>
                                            <td><a href="/CarPrice/CarDetail/@item.CarID" class="btn btn-outline-secondary">Fiyat Bilgileri</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/AdminCar/CreateCar/" class="btn btn-outline-primary">Yeni Araç Girişi</a>
                        </div>

                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>
        </div>

    </div>
</div>
