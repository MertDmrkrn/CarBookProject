<script src="~/chart.js"></script>


<div class="col-lg-4">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title d-inline-block">Yıllık Kiralama Sayıları</h4>

            <div style="height:260px;">
                <canvas id="my1Chart"></canvas>
            </div>

            <script>
                // Chart.js Gradient Background
                const ctx = document.getElementById('my1Chart').getContext('2d');
                const gradient = ctx.createLinearGradient(0, 0, 0, 300);
                gradient.addColorStop(0, 'rgba(75,192,192,0.4)');
                gradient.addColorStop(1, 'rgba(75,192,192,0)');

                new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: ['2020','2021','2022','2023','2024','2025'],
                        datasets: [{
                            label: 'Yıllık Kiralama Grafiği',
                            data: [285,245,185,366,458,563],
                            fill: true,
                            backgroundColor: gradient,
                            borderColor: 'rgba(0, 178, 255, 1)',
                            borderWidth: 3,
                            tension: 0.3,        // çizgiyi yumuşatır
                            pointRadius: 5,
                            pointBackgroundColor: 'white',
                            pointBorderColor: 'rgba(0, 178, 255, 1)',
                            pointHoverRadius: 8,
                            pointHoverBackgroundColor: 'rgba(0,178,255,1)'
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                labels: {
                                    color: '#333',
                                    font: {
                                        size: 14
                                    }
                                }
                            }
                        },
                        animation: {
                            duration: 1200,
                            easing: 'easeOutQuart'
                        },
                        scales: {
                            x: {
                                ticks: {
                                    color: '#333'
                                },
                                grid: {
                                    display: false
                                }
                            },
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    color: '#333'
                                },
                                grid: {
                                    color: 'rgba(200,200,200,0.3)'
                                }
                            }
                        }
                    }
                });
            </script>


            <div class="row text-center mt-4">
                <div class="col-6">
                    <h4>₺ 367.850</h4>
                    <p class="text-muted mb-0">Son 1 Aylık Ciro</p>
                </div>
                <div class="col-6">
                    <h4>₺ 14.300</h4>
                    <p class="text-muted mb-0">Bugünki Kazanç</p>
                </div>
            </div>
        </div>
    </div>
</div>
