            </div>

            <script>
                const ctx3 = document.getElementById('my3Chart').getContext('2d');

                new Chart(ctx3, {
                    type: 'bar',
                    data: {
                        labels: ['Sabiha Gökçen', 'Kadıköy Rıhtım', 'Kartal Köprüsü', 'İstanbul Havalimanı', 'Maltepe Sahil', 'Bahçelievler Meydan'],
                        datasets: [{
                            label: 'Konumda Bulunan Araç Sayısı',
                            data: [15, 5, 2, 12, 4, 1],
                            backgroundColor: [
                                'rgba(54, 162, 235, 0.7)',   // Mavi
                                'rgba(255, 99, 132, 0.7)',  // Kırmızı
                                'rgba(255, 206, 86, 0.7)',  // Sarı
                                'rgba(75, 192, 192, 0.7)',  // Yeşil
                                'rgba(153, 102, 255, 0.7)', // Mor
                                'rgba(255, 159, 64, 0.7)'   // Turuncu
                            ],
                            borderColor: [
                                'rgba(54, 162, 235, 1)',
                                'rgba(255, 99, 132, 1)',
                                'rgba(255, 206, 86, 1)',
                                'rgba(75, 192, 192, 1)',
                                'rgba(153, 102, 255, 1)',
                                'rgba(255, 159, 64, 1)'
                            ],
                            borderWidth: 2,
                            borderRadius: 8,     // bar uçlarını yuvarlatır
                            maxBarThickness: 50  // çubuk kalınlığını sabitler
                        }]
                    },
                    options: {
