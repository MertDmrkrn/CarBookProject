@model CreateServiceDto

@{
    ViewData["Title"] = "CreateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Hizmet Bilgisi Girişi</h4>
                        <p class="card-subtitle mb-4">Yeni Hizmet bilgisini girebilirsiniz. Veri girişinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputService">Hizmet Başlığı</label>
                                <input type="text" class="form-control" id="exampleInputService" asp-for="ServiceTitle" placeholder="Hizmet Başlığı Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputServiceDesc">Hizmet Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputServiceDesc" asp-for="ServiceDescription" placeholder="Hizmet Açıklama Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputIcon">Hizmet İkon Url</label>
                                <input type="text" class="form-control" id="exampleInputIcon" asp-for="ServiceIcon" placeholder="Hizmet İkon Url Girişi Yapınız">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

