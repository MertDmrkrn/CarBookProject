@model UpdateTestimonialDto

@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Referans Girişi</h4>
                        <p class="card-subtitle mb-4">Yeni Referansı girebilirsiniz. Veri girişinden sonra güncelle butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
                        <form method="post">
                            <input type="hidden" asp-for="TestimonialID"/>
                            <div class="form-group">
                                <label for="exampleInputTestimonialName">Ad Soyad</label>
                                <input type="text" class="form-control" id="exampleInputTestimonialName" asp-for="TestimonialName" placeholder="Müşteri Ad Soyad Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputTestimonialTitle">Ünvan</label>
                                <input type="text" class="form-control" id="exampleInputTestimonialTitle" asp-for="TestimonialTitle" placeholder="Referans Ünvan Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImgUrl">Referans Görseli</label>
                                <input type="text" class="form-control" id="exampleInputImgUrl" asp-for="TestimonialImgUrl" placeholder="Referans Resim Url Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImgUrl">Referans Yorumu</label>
                                <textarea rows="5" asp-for="TestimonialComment" class="form-control" placeholder="Yorumunuzu Buraya Yazabilirsiniz."></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


