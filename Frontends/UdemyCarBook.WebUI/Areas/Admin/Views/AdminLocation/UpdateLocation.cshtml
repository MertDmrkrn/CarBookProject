@model UpdateLocationDto


@{
    ViewData["Title"] = "UpdateLocation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">-Lokasyon Bilgisi Gümcelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Yeni lokasyon bilgisini girebilirsiniz. Veri girişinden sonra güncelle butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
                        <form method="post">
                            <input type="hidden" asp-for="LocationID" />
                            <div class="form-group">
                                <label for="exampleInputLocation">Lokasyon</label>
                                <input type="text" class="form-control" id="exampleInputLocation" asp-for="LocationName" placeholder="Lokasyon Girişi Yapınız">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

