@model CreateSocialMediaDto

@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Sosyal Medya Hesap Girişi</h4>
                        <p class="card-subtitle mb-4">Yeni Sosyal Medya hesabı girebilirsiniz. Veri girişinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputSocialMedia">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputSocialMedia" asp-for="SocialMediaName" placeholder="Sosyal Medya Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputSocialMediaUrl">URL</label>
                                <input type="text" class="form-control" id="exampleInputSocialMediaUrl" asp-for="SocialMediaUrl" placeholder="Sosyal Medya uzantsı Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputIcon">Sosyal Medya İkon</label>
                                <input type="text" class="form-control" id="exampleInputIcon" asp-for="SocialMediaIcon" placeholder="Sosyal Medya İkon Url Girişi Yapınız">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
