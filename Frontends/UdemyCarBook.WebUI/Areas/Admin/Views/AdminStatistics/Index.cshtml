
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!--start title1-->
        <div class="row">
            <div class="col-md-6 col-xl-3">
