@model CreateBannerDto

@{
    ViewData["Title"] = "CreateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">


        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yeni Banner Girişi</h4>
                        <p class="card-subtitle mb-4">Yeni Banner'ı girebilirsiniz. Veri girişinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz. Tasarım bozulmaması adına yeni bir Banner girişi yapmadan önce önceki Banner alanını silin, sadece 1 adet Banner verisi kalmalıdır.</p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputTitle">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="BannerTitle" placeholder="Başlık Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="BannerDescription" placeholder="Açıklama Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputURL">Video URL</label>
                                <input type="text" class="form-control" id="exampleInputURL" asp-for="VideoUrl" placeholder="URL Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputVideoDesc">Video Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputVideoDesc" asp-for="VideoDescription" placeholder="Video Açıklama Girişi Yapınız">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

